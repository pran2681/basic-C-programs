QSN: WAP TO READ AND PRINT ARRAY


#include<stdio.h>
#define MAX_SIZE 100
int main()
{
    int size;
    int arr[MAX_SIZE];
    
    printf("Entr the size of array: ");
    scanf("%d",&size);
    
    printf("Entr %d elements in array : ",size);
    for(int i=0;i<size;i++){
        scanf("%d",&arr[i]);
    }
    
    printf("Elements in array are: ");
    for(int i=0;i<size;i++){
        printf("%d\t",arr[i]);
    }
    return 0;
}



